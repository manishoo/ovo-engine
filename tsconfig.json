{
  "compilerOptions": {
    "target": "es2015",
    "module": "commonjs",
    "lib": [ "es2015" ],
    "strict": true,
    "outDir": "build",
    "emitDecoratorMetadata": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "baseUrl": "./",
    "removeComments": true,
    "experimentalDecorators": true,
    "strictPropertyInitialization": false,
    "forceConsistentCasingInFileNames": true,
    "noImplicitThis": false,
    "skipLibCheck": true,
    "paths": {
      "~/*": [
        "src/*"
      ],
      "src/*": [
        "src/*"
      ]
    }
  },
  "include": [
    "src"
  ],
  "exclude": [
    "src/scripts"
  ]
}