{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "lib": [ "es2015" ],

    "strict": true,
    "allowJs": true,

    "allowUnreachableCode": true,
    "allowUnusedLabels": false,

    "emitDecoratorMetadata": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "removeComments": true,
    "experimentalDecorators": true,

    "strictPropertyInitialization": false,
    "forceConsistentCasingInFileNames": true,

    "noImplicitThis": false,
    "skipLibCheck": true,

    "baseUrl": "./",
    "outDir": "build",

    "paths": {
      "@Services/*": [
        "src/services/*"
      ],
      "@Models": [
        "src/models/index"
      ],
      "@Models/*": [
        "src/models/*"
      ],
      "@Utils/*": [
        "src/utils/*"
      ],
      "@Config": [
        "src/config"
      ],
      "@Config/*": [
        "src/config/*"
      ],
      "@Loaders/*": [
        "src/loaders/*"
      ],
      "@Types/*": [
        "src/types/*"
      ]
    }
  },
  "include": [
    "src"
  ],
  "exclude": [
    "src/scripts"
  ]
}
