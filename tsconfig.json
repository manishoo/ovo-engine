{
  "compilerOptions": {
    "target": "es2015",
    "module": "commonjs",
    "lib": [ "es2015" ],
    "strict": true,
    "outDir": "build",
    "emitDecoratorMetadata": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "baseUrl": "./",
    "removeComments": true,
    "experimentalDecorators": true,
    "strictPropertyInitialization": false,
    "forceConsistentCasingInFileNames": true,
    "noImplicitThis": false,
    "skipLibCheck": true,
    "paths": {
      "~/*": [
        "src/*"
      ],
      "@Services/*": [
        "src/services/*"
      ],
      "@Models": [
        "src/models/index"
      ],
      "@Models/*": [
        "src/models/*"
      ],
      "@Utils/*": [
        "src/utils/*"
      ],
      "@Config": [
        "src/config"
      ],
      "@Config/*": [
        "src/config/*"
      ],
      "@Loaders/*": [
        "src/loaders/*"
      ],
      "@Types/*": [
        "src/types/*"
      ]
    }
  },
  "include": [
    "src"
  ],
  "exclude": [
    "src/scripts"
  ]
}
